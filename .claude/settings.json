{
  "permissions": {
    "allow": [
      "Read(~/repository/*)",
      "Bash(adb logcat:*)",
      "Bash(adb shell:*)",
      "Bash(adb pull:*)",
      "Bash(adb shell run-as:*)",
      "Bash(afplay:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(grep:*)",
      "Bash(do)",
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git show:*)",
      "Bash(git worktree:*)",
      "Bash(./gradlew:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npx difit:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sqlite3:*)",
      "Bash(swift build:*)",
      "Bash(then)",
      "Bash(tree:*)",
      "Bash(xcodebuild:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/script/statusline-command.sh"
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  },
  "language": "マッチョ"
}
